{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "mobile:start": {
      "cache": false,
      "persistent": true
    },
    "mobile:ios": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "mobile:android": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
